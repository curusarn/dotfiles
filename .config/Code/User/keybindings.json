// Place your key bindings in this file to override the defaults
[
    // use alt as escape in editor in vim
    //{
    //    "key": "meta+space",
    //    "command": "extension.vim_escape"
    //},
    // move around with alt + hjkl
    {
        "key": "alt+h",
        "command": "workbench.action.navigateLeft",
    },
    {
        "key": "alt+l",
        "command": "workbench.action.navigateRight",
    },
    {
        "key": "alt+k",
        "command": "workbench.action.navigateUp",
    },
    {
        "key": "alt+j",
        "command": "workbench.action.navigateDown",
        "when": "activePanel != 'workbench.panel.markers'"
    },
    {
        "key": "alt+j",
        "command": "workbench.action.focusPanel",
        "when": "activePanel == 'workbench.panel.markers'"
    },
    // cycle tabs with alt + ui when in editor
    {
        "key": "alt+u",
        "command": "workbench.action.previousEditor",
        "when": "!sideBarFocus"
    },
    {
        "key": "alt+i",
        "command": "workbench.action.nextEditor",
        "when": "!sideBarFocus"
    },
    // cycle items in menu with alt + ui
    {
        "key": "alt+u",
        "command": "workbench.action.previousSideBarView",
        "when": "sideBarFocus"
    },
    {
        "key": "alt+i",
        "command": "workbench.action.nextSideBarView",
        "when": "sideBarFocus"
    },
    // for some reason expolorer -> extension didn't work out of the box
    {
        "key": "alt+u",
        "command": "workbench.view.extensions",
        "when": "sideBarFocus && activeViewlet == 'workbench.view.explorer'"
    },
    // cycle tabs in panel with alt + ui
    {
        "key": "alt+u",
        "command": "workbench.action.previousPanelView",
        "when": "panelFocus"
    },
    {
        "key": "alt+i",
        "command": "workbench.action.nextPanelView",
        "when": "panelFocus"
    },
    // view stuff in the menu on the left with alt++ efgdx
    {
        "key": "alt+e",
        "command": "workbench.view.explorer",
    },
    {
        "key": "alt+f",
        "command": "workbench.view.search",
    },
    {
        "key": "alt+g",
        "command": "workbench.view.scm",
    },
    {
        "key": "alt+d",
        "command": "workbench.view.debug",
    },
    {
        "key": "alt+x",
        "command": "workbench.view.extensions",
    },
    // original keybindings
    {
        "key": "ctrl+pageup",
        "command": "-workbench.action.previousEditor"
    },
    {
        "key": "ctrl+pagedown",
        "command": "-workbench.action.nextEditor"
    },
    {
        "key": "ctrl+tab",
        "command": "-workbench.action.openNextRecentlyUsedEditorInGroup"
    },
    {
        "key": "ctrl+shift+e",
        "command": "-workbench.view.explorer"
    },
    {
        "key": "ctrl+shift+f",
        "command": "-workbench.view.search",
        "when": "!searchViewletVisible"
    },
    {
        "key": "ctrl+shift+g",
        "command": "-workbench.view.scm"
    },
    {
        "key": "ctrl+shift+d",
        "command": "-workbench.view.debug"
    },
    {
        "key": "ctrl+shift+x",
        "command": "-workbench.view.extensions"
    },
    {
        "key": "alt+m",
        "command": "workbench.action.togglePanel"
    },
    {
        "key": "ctrl+j",
        "command": "-workbench.action.togglePanel"
    },
    {
        "key": "alt+n",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "ctrl+b",
        "command": "-workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "alt+,",
        "command": "workbench.action.toggleZenMode"
    },
    {
        "key": "ctrl+k z",
        "command": "-workbench.action.toggleZenMode"
    },
    {
        "key": "alt+o",
        "command": "workbench.action.splitEditorRight"
    },
    {
        "key": "alt+q",
        "command": "workbench.action.closeActiveEditor"
    },
    {
        "key": "ctrl+w",
        "command": "-workbench.action.closeActiveEditor"
    },
]