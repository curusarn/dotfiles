bindcode $mod+Ctrl+17 move container to workspace number 8
bindcode $mod+Ctrl+18 move container to workspace number 9

# move to workspace with focused container (keycodes because layouts)
bindcode $mod+Shift+49 move container to workspace number 0; workspace 0
