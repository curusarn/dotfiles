[battery]
label=
command=$HOME/.distro_paths/DISTRO/i3blocks/battery
interval=10
color=#90A4AE

[ip]
label= 
command=ip addr show | grep 'inet ' | grep -v '127.0.0.1' | cut -d' ' -f6
interval=10
color=#4CAF50

[load]
label= 
command=$HOME/.distro_paths/DISTRO/i3blocks/load_average
